{
  "name": "market-data-downloader",
  "productName": "Market Data Downloader",
  "version": "1.2.0",
  "description": "专业市场数据下载工具",
  "author": "Trading System Team",
  "license": "Commercial",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite build && electron .",
    "dev:all": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "build:linux": "vue-tsc --noEmit && vite build && electron-builder --linux",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.4.3",
    "papaparse": "^5.4.1",
    "pinia": "^2.1.7",
    "vue": "^3.3.10",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/papaparse": "^5.3.14",
    "@vitejs/plugin-vue": "^4.5.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "appId": "com.tradingsystem.market-downloader",
    "productName": "Market Data Downloader",
    "publish": [
      {
        "provider": "github",
        "owner": "kaodaxueqiu",
        "repo": "market-data-downloader"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/electron/**/*",
      "dist/renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Finance",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Market Data Downloader"
    }
  }
}
